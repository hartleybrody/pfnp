        <div class="row">
            <div class="col-md-4 col-md-offset-2">
                <h2>Hello there, <%= @name %></h2>
                <p class="welcome-message">
                    <% if @name == "" then %>
                        You don't have a name.
                    <% elsif @name == "Hartley" then %>
                        You must be the instructor.
                    <% else %>
                        You must be a student.
                    <% end %>
                </p>
            </div>
            <div class="col-md-4">
                <p class="lead">
                    It is currently <%= @now %>
                </p>
            </div>
        </div><!--.row-->