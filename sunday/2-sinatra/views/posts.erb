        <div class="row">
            <div class="col-md-4 col-md-offset-2">
                <h2>Create a New Post</h2>
                <form action="/posts/" method="post" class="form">
                    <div class="form-group">
                        <label for="pwd">Post Title</label>
                        <input type="text" name="title" class="form-control" placeholder="Write a a title" />
                    </div>
                    <div class="form-group">
                        <label for="pwd">Post Body</label>
                        <input type="text" name="body" class="form-control" placeholder="Write a short post" />
                    </div>
                    <input type="submit" value="Create post" class="btn btn-primary" />
                </form>
            </div>
            <div class="col-md-4">
                <h2>Current Posts</h2>
                <% @posts.each do |post| %>
                    <h3><%= post.title %></h3>
                    <p class="lead">
                        <%= post.body %>
                    </p>
                <% end %>
                </p>
            </div>
        </div><!--.row-->